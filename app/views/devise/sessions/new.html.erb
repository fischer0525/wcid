  <div class="row">
    <div class = "small-offset-3 small-6 columns">
    <h2 style="text-align:center">Sign In</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :email, class: 'input-group-label' %>
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= f.label :password, class: 'input-group-label' %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class = "small-offset-3 columns"></div>
    <% if devise_mapping.rememberable? -%>
    <div class="small-offset-3 small-6 columns">
      <h3 style="text-align:center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %></h3>
    </div>
    <div class = "small-offset-3 columns">
    <% end -%>
  </div>


  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <h3 style="text-align:center"><%= f.submit "Sign In", class: "submit"%></h3>
      <br></br>
      <h3 style="text-align:center"><%= render "devise/shared/links" %></h3>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>
  <div class="row">
    <div class = "small-offset-3 small-6 columns">
        <h3 style="text-align:center"><%= link_to "Go Back", events_path %></h3>
      </div>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>
<% end %>
